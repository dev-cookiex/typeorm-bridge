{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [ "ESNext", "DOM" ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "exclude": [
    "webpack.config.ts",
    "running-test-server",
    "src"
  ]
}